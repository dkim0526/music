<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.midisheetmusic"
    android:versionCode="8"
    android:versionName="2.5.1" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/dj_icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.midisheetmusic.AndroidDashboardDesignActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.midisheetmusic.ChooseSongActivity" >
        </activity>
        <activity android:name="com.midisheetmusic.FileBrowserActivity" >
        </activity>
        <activity android:name="com.midisheetmusic.HelpActivity" >
        </activity>
        <activity
            android:name="com.midisheetmusic.SheetMusicActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.midisheetmusic.LevelActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_test"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.midisheetmusic.TutorialMSActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_tutorial_ms"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.midisheetmusic.PlayAroundActivity"
            android:configChanges="orientation"
            android:label="@string/playaround"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.midisheetmusic.NotesExperimentActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.testmusic.SoundPoolExample"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.midisheetmusic.Beats_Activity"
            android:configChanges="orientation"
            android:label="@string/title_activity_beats_"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.midisheetmusic.SoonToBe"
            android:configChanges="orientation"
            android:label="@string/title_activity_soon_to_be"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>